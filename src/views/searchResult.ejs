<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container">
    <h1 class="my-4">Search Results</h1>

    <!-- Display search query if available -->
    <% if (typeof query !== 'undefined' && query.trim().length > 0) { %>
        <p>Search query: "<%= query %>"</p>
    <% } %>

    <!-- Check if there are search results -->
    <% if (searchResults && searchResults.length > 0) { %>
        <ul class="list-group">
            <% searchResults.forEach(result => { %>
                <li class="list-group-item my-2">
                    <h5><%= result.Title %></h5>
                    <p>Type: <%= result.constructor.name %></p>
                    <p>Date: <%= new Date(result.Date).toLocaleDateString() %></p>
                    <% if (result.FileLink) { %>
                        <p>File Link: <a href="<%= result.FileLink %>" target="_blank">View File</a></p>
                    <% } %>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <!-- If no results are found -->
        <p class="text-warning">No results found for your search.</p>
    <% } %>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
