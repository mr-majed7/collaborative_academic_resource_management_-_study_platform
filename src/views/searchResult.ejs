<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar with Search in Center and Links on Right -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CARMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <!-- Centered Search and Filter Form -->
                <form class="d-flex" action="/search" method="post">
                    <input class="form-control me-2" type="search" placeholder="Search Materials" aria-label="Search" name="query">
                    <select class="form-select me-2" name="filter">
                        <option value="all" selected>All</option>
                        <option value="book">Books</option>
                        <option value="lectureNotes">Lecture Notes</option>
                        <option value="slides">Slides</option>
                        <option value="lectureVideo">Lecture Videos</option>
                    </select>
                    <button class="btn btn-light" type="submit">Search</button>
                </form>
                <!-- Links on the Right -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/dashboard/<%= currentUser %>">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <main class="container mt-5 pt-5">
        <h1 class="my-4">Search Results</h1>

        <!-- Display search results -->
        <% if (searchResults && searchResults.length > 0) { %>
            <ul class="list-group">
                <% searchResults.forEach(result => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center my-3 border rounded">
                        <div>
                            <h5 class="mb-2"><%= result.Title %></h5>
                            <p class="mb-1"><strong>Type:</strong> <%= result.constructor.name %></p>
                            <p class="mb-1"><strong>Created by:</strong> <%= result.Folder.User.dataValues.Name %></p>
                            <% if (result.FileLink) { %>
                                <p><strong>File Link:</strong> <a href="<%= result.FileLink %>" target="_blank" class="btn btn-link">View File</a></p>
                            <% } %>
                        </div>
                        <form action="/bookmark" method="post">
                            <button type="submit" class="btn btn-outline-primary">Bookmark</button>
                        </form>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p class="text-warning">No results found for your search.</p>
        <% } %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
