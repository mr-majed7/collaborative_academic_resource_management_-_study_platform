<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <title><%= Username %>'s Materials</title>

    <style>
        body {
            padding-top: 80px; /* To prevent content from being hidden behind the navbar */
            background-color: #f8f9fa;
        }
        .folder-list {
            margin-top: 20px;
        }
        .folder-list h3 {
            margin-bottom: 20px;
        }
        .folder-list a {
            text-decoration: none;
            font-weight: 500;
        }
        .folder-list a:hover {
            text-decoration: underline;
        }
        .no-folders {
            text-align: center;
            margin-top: 50px;
            color: #6c757d;
        }
    </style>
</head>
<body>

    <!-- Navbar with Search in Center and Links on Right -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CARMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <!-- Centered Search and Filter Form -->
                <form class="d-flex" action="/search" method="post">
                    <input class="form-control me-2" type="search" placeholder="Search Materials" aria-label="Search" name="query">
                    <select class="form-select me-2" name="filter">
                        <option value="all" selected>All</option>
                        <option value="book">Books</option>
                        <option value="lectureNotes">Lecture Notes</option>
                        <option value="slides">Slides</option>
                        <option value="lectureVideo">Lecture Videos</option>
                    </select>
                    <button class="btn btn-light" type="submit">Search</button>
                </form>
                <!-- Links on the Right -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/dashboard/<%= currentUser %>">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container folder-list">
        <% if(folderDetails.length) { %>
            <h3>Your Folders:</h3>
            <ul class="list-group">
                <% folderDetails.forEach((folder) => { %>
                    <li class="list-group-item">
                        <a href="/materials/<%= folder.folder_id %>" class="text-primary">
                            <%= folder.Title %>
                        </a>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <div class="no-folders">
                <h3>No Folders Yet</h3>
                <p>Start by creating your first folder to store materials.</p>
            </div>
        <% } %>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
