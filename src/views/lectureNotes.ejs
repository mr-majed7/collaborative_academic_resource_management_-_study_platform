<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Add Lecture Notes</title>

    <style>
        body {
            padding-top: 80px; /* To avoid content being hidden under the navbar */
            background-color: #f8f9fa;
        }

        .form-section {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-section h3 {
            margin-bottom: 20px;
        }

        .btn-primary {
            width: 100%;
        }

        .form-check-inline {
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <!-- Navbar with Search in Center and Links on Right -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CARMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <!-- Centered Search and Filter Form -->
                <form class="d-flex" action="/search" method="post">
                    <input class="form-control me-2" type="search" placeholder="Search Materials" aria-label="Search" name="query">
                    <select class="form-select me-2" name="filter">
                        <option value="all" selected>All</option>
                        <option value="book">Books</option>
                        <option value="lectureNotes">Lecture Notes</option>
                        <option value="slides">Slides</option>
                        <option value="lectureVideo">Lecture Videos</option>
                    </select>
                    <button class="btn btn-light" type="submit">Search</button>
                </form>
                <!-- Links on the Right -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/dashboard/<%= currentUser %>">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Form Section -->
    <section class="form-section shadow-sm mt-5">
        <h3>Add Lecture Notes</h3>
        <form action="/lectureNotes/<%= folder_id %>" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="Title" id="title" class="form-control" placeholder="Enter the title" required>
            </div>

            <div class="mb-3">
                <label for="fileLink" class="form-label">File Link</label>
                <input type="text" name="FileLink" id="fileLink" class="form-control" placeholder="Enter file link" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Select Privacy</label><br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Privacy" id="private" value="private" required>
                    <label class="form-check-label" for="private">Private</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Privacy" id="public" value="public" required>
                    <label class="form-check-label" for="public">Public</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Add Lecture Note</button>
        </form>
    </section>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
